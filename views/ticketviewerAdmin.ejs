<!DOCTYPE html>
<html lang = "en">
  <head>
    <title>Ticketer - View Tickets</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="public/css/navbar.css" rel="stylesheet" type="text/css" />
    <style>
      body {
          margin: 0;
      }

      .overlay {
          height: 0%;
          width: 100%;
          position: fixed;
          z-index: 1;
          top: 0;
          left: 0;
          background-color: rgb(0,0,0);
          background-color: rgba(0,0,0, 0.9);
          overflow-y: hidden;
          transition: 0.5s;
      }

      .overlay-content {
          position: relative;
          top: 5%;
          width: 100%;
          text-align: center;
          margin-top: 30px;
      }

      .overlay a {
          padding: 8px;
          text-decoration: none;
          font-size: 36px;
          color: #818181;
          display: block;
          transition: 0.3s;
      }

      .overlay a:hover, .overlay a:focus {
          color: #f1f1f1;
      }

      .overlay .closebtn {
          position: absolute;
          top: 20px;
          right: 45px;
          font-size: 60px;
          z-index: 1;
      }

      @media screen and (max-height: 450px) {
        .overlay {overflow-y: auto;}
        .overlay a {font-size: 20px}value=""
        .overlay .closebtn {
          font-size: 40px;
          top: 15px;
          right: 35px;
        }
      }

      textarea { resize: none; }
      </style>
  </head>
  <body onload="defaultTable()">
    <% for (var i=0; i < tickets.length; i++) {%>
      <div id="specificTicket<%= i %>" class="overlay">
        <a href="javascript:void(0)" class="closebtn" onclick="closeTicket(<%= i %>)">&times;</a>
        <div class="overlay-content">
          <div class="container">
            <div class="jumbotron">
              <div class="row">
                <div class="col-sm-12">
                  <h4>
                    <form name="ticketform" action="/updateTicket/<%=tickets[i].id%>" method="post">

                      <div class="row">
                        <div class="col-sm-4">
                          <div class="form-group">
                            <label for="name">Ticket Name: </label>
                            <input class="form-control" type="text" name="name" id="name" value="<%=tickets[i].name%>" placeholder="Name" required="true">
                          </div>
                        </div>
                        <div class="col-sm-2">
                          <div class="form-group">
                            <label for="room">Room: </label>
                            <input class="form-control" type="text" name="room" id="room" value="<%=tickets[i].room%>" placeholder="Room" required="true">
                          </div>
                        </div>
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2">
                          <label for="status">Status: </label>
                          <% if(tickets[i].status == "Unassigned") {%>
                            <select class="form-control" name="status" id="status" value="<%= tickets[i].status %>">
                              <option selected value="Unassigned">Unassigned</option>
                              <option value="In Progress">In Progress</option>
                              <option value="Completed">Completed</option>
                            </select>
                          <% } else { %>
                            <% if(tickets[i].status == "In Progress") {%>
                              <select class="form-control" name="status" id="status" value="<%= tickets[i].status %>">
                                <option value="Unassigned">Unassigned</option>
                                <option selected value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                              </select>
                            <% } else { %>
                                <select class="form-control" name="status" id="status" value="<%= tickets[i].status %>">
                                  <option value="Unassigned">Unassigned</option>
                                  <option value="In Progress">In Progress</option>
                                  <option selected value="Completed">Completed</option>
                                </select>
                            <% } %>
                          <% } %>
                        </div>
                        <div class="col-sm-2">
                          <label for="technicianAssigned">Technician: </label>
                          <select class="form-control" name="technicianAssigned" id="technicianAssigned">
                            <option></option>
                            <% for(var j = 0; j < technicians.length; j++) {%>
                              <option value="<%= technicians[j].name %>"><%= technicians[j].name %></option>
                            <% } %>
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <div class="row">
                          <div class="col-sm-12">
                            <div class="form-group">
                              <label for="desc">Description: </label>
                              <textarea class="form-control" name="desc" id="desc" rows="6" placeholder="Description" required="true"><%= tickets[i].desc %></textarea>
                            </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-sm-3">
                          <button type="submit"  name="ticketform" id="ticketform" class="btn btn-block btn-primary">Update Ticket</button>
                        </div>
                        <div class="col-sm-9">
                        </div>
                      </div>
                    </form>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Ticketer </a>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
