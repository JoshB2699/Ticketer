              <li><a href="/changePassword">Change Password</a></li>
              <li><a href ="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
      </div>
    </nav>

    <div class="container">
        <div class="jumbotron">
          <div class="row">
            <div class="col-sm-3">
              <h2>Active Tickets</h2>
            </div>
            <div class="col-sm-9">
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <h4>
                <div id="ticketTable">

                </div>
              </h4>
            </div>
          </div>
        </div>
      </div>

      <script>
        function openTicket(i) {
            document.getElementById("specificTicket" + i).style.height = "100%";
        }

        function closeTicket(i) {
            document.getElementById("specificTicket" + i).style.height = "0%";
        }

        document.onkeydown = function(evt) {
            evt = evt || window.event;
            var isEscape = false;
            if ("key" in evt) {
                isEscape = (evt.key == "Escape" || evt.key == "Esc");
            } else {
                isEscape = (evt.keyCode == 27);
            }
            if (isEscape) {
              <% for (var i=0; i < tickets.length; i++) {%>
                closeTicket(<%=i%>);
              <% } %>
            }
        };
      </script>

      <script>
        // Sorting Code:

        var headings = [];
        setNotSorted(10);

        // On click of th tag:
        function sortTable(headingID) {
          if (headings) {
            //If virtual tracking table exists check the current sort order. If it is unsorted then sort it in ascending order and set all other heading as unsorted; if sorted in ascending order then sort it into descending order. If the virtual tracking table has not yet been created then set all headings as unsorted.
            if (headings[headingID] == 'none') {
              sort(headingID, 'asc');
              setNotSorted(headingID);
            } else {
              if (headings[headingID] == 'asc') {
                sort((headingID), desc);
                setNotSorted((headingID));
              } else {
                sort((headingID), 'asc');
                setNotSorted((headingID));
              }
            }
          }
        }

        function sort(heading, order) {
          var sortArray = <%- JSON.stringify(tickets)%>;

          console.log(sortArray)

          if (sortArray.length < 2) {
            return sortArray;
          } else {
            var middle = parseInt(sortArray.length / 2);
            var left   = sortArray.slice(0, middle);
            var right  = sortArray.slice(middle, sortArray.length);

           return merge(mergeSort(left), mergeSort(right));
          }
        }

        function mergeSort(arr)
        {
            if (arr.length < 2)
                return arr;

            var middle = parseInt(arr.length / 2);
            var left   = arr.slice(0, middle);
            var right  = arr.slice(middle, arr.length);

            return merge(mergeSort(left), mergeSort(right));
        }

        function merge(left, right)
        {
            var result = [];

            while (left.length && right.length) {
                if (left[0] <= right[0]) {
                    result.push(left.shift());
                } else {
                    result.push(right.shift());
                }
            }

            while (left.length)
                result.push(left.shift());

            while (right.length)
                result.push(right.shift());

            console.log(result);

            return result;
        }

        function setNotSorted(id) {
          for(var i = 0; i < 6; i++) {
            if(i !== id) {
              headings[i] = 'none';
            }
          }
        }
      </script>

      <script>
        function defaultTable() {
          var html = '<table class = "table table-striped table-bordered table-hover" style = "width:100%"> <thead class = "thead-default"> <tr> <th style="cursor:pointer" onclick="sortTable(0)">Title</th> <th>Room</th> <th>Description</th> <th>User</th> <th>Status</th> <th>Assigned Technician</th> </tr> </thead>'
          <% for (var i=0; i < tickets.length; i++) {%>
            html += '<tr href="/viewSpecificTicket/<%=tickets[i].ticketid %>"> <td><span style="cursor:pointer" onclick="openTicket(<%= i %>)"><%=tickets[i].name %></span></td> <td><%=tickets[i].room %></td> <td><%=tickets[i].desc %></td> <td><%=tickets[i].author %></td> <td><%=tickets[i].status %></td> <td><%=tickets[i].assigned %></td> </tr>'
          <% } %>
          html += ' </table>'
          $("#ticketTable").append(html);
        }
      </script>

  </body>
</html>
