<!DOCTYPE HTML>
<html lang="en">
  <head>
    <title>Ticketer - Main Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src = "public/js/clock.js"></script>
    <link href="public/css/navbar.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <%- include includes/navbar.ejs %>

    <div class="container">
      <div class="jumbotron">
        <div class="row">
          <div class="col-sm-3">
            <h4>Welcome, <%=username %>.</h4>
          </div>
          <div class="col-sm-7"></div>
          <div class="col-sm-2">
            <h4><div id="clockbox"></div></h4>
          </div>
        </div>
        <p></p>
        <div class="row">
          <div class="col-sm-3">
            <a href="/createTicket"><button class="btn btn-block btn-primary">New Ticket</button></a>
          </div>
          <div class="col-sm-3">
            <a href="/signup"><button class="btn btn-block btn-primary">Add new user</button></a>
          </div>
        </div>
        <% if (tickets.length !== 0) { %>
          <div class="row">
            <div class="col-sm-12">
              <br />
                <h4><strong>Assigned Tickets:</strong></h4>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <h4>
                <table class = "table table-striped table-bordered table-hover" style = "width:100%">
                  <thead class = "thead-default">
                    <tr>
                      <th>Title</th>
                      <th>Room</th>
                      <th>Description</th>
                    </tr>
                  </thead>
                  <% for (var i=0; i < tickets.length; i++) {%>
                      <tr>
                        <td><a href="/ticketViewer" style="color: #393333;text-decoration: none;"><%=tickets[i].name %></a></td>
                        <td><%=tickets[i].room %></td>
                        <td><%=tickets[i].desc %></td>
                      </tr>
                  <% } %>
                </table>
              </h4>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <script src = "/webpack/bundle.js"></script>
  </body>
</html>
