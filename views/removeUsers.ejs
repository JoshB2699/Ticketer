<!DOCTYPE html>
<html lang = "en">
  <head>
    <title>Ticketer - Remove Users</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>

    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Ticketer </a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/createTicket">Create Ticket</a></li>
          <li class="active"><a href="/ticketViewer">View Tickets</a></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <li><a><%= username%></a></li>
          <li><a href ="/logout">Logout</a></li>
        </ul>
      </div>
    </nav>


    <div class="container">
        <div class="jumbotron">
          <div class="row">
            <div class="col-sm-3">
              <h2>Remove Users</h2>
            </div>
            <div class="col-sm-9">
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <h4>
                <table style = "width:100%">
                  <tr>
                    <th>Username</th>
                    <th>Active Tickets</th>
                    <th>Admin Status</th>
                  </tr>

                  <% for (var i=0; i < users.length; i++) {%>
                    <tr>
                      <td><%=users[i].username %></td>
                      <td><%=users[i].activeTickets %></td>
                      <% if (users[i].isAdmin) {%>
                        <td> Yes </td>
                      <% } else { %>
                        <td>No</td>
                      <% } %>
                    </tr>
                  <% } %>


                </table>
              </h4>
            </div>
          </div>
        </div>
      </div>
      <script src="/webpack/bundle.js"></script>
  </body>
</html>
