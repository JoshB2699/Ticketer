<!DOCTYPE html>
<html lang = "en">
  <head>
    <title>Ticketer - New Ticket</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    <script src = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="public/css/navbar.css" rel="stylesheet" type="text/css" />
    <style>textarea { resize: none; }</style>
  </head>

  <body>
    <%- include includes/navbar.ejs %>

    <div class="container">
        <div class="jumbotron">
          <div class="row">
            <div class="col-sm-6">
              <h2>Create Ticket</h2>
            </div>
          </div>
          <form name="ticketform" action="/createTicket" method="post">

            <div class="row">
              <div class="col-sm-4">
                <div class="form-group">
                  <label for="name">Title: </label>
                  <input class="form-control" type="text" name="name" id="name" placeholder="Title" required="true">
                </div>
              </div>
              <div class="col-sm-2">
                <div class="form-group">
                  <label for="room">Room: </label>
                  <input class="form-control" type="text" name="room" id="room" placeholder="Room" required="true">
                </div>
              </div>
              <div class="col-sm-6">
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <div class="form-group">
                  <label for="desc">Description: </label>
                  <textarea class="form-control" name="desc" id="desc" rows="8" placeholder="Description" required="true"></textarea>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-3">
                <button type="submit"  name="ticketform" id="ticketform" class="btn btn-block btn-primary">Submit Ticket</button>
              </div>
              <div class="col-sm-9">
              </div>
            </div>
          </form>
        </div>
      </div>
      <script src="/webpack/bundle.js"></script>
  </body>
</html>
